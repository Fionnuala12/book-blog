<%- include('partials/header.ejs'); -%>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <form action="/update/<%= book.id %>" method="post" class="p-4 w-75 w-md-50 border rounded bg-light"> 
        <div class="mb-3">
        <label class="form-label">Title: </label>
        <input type="text" name="title" class="form-control form-title" value="<%= post.title %>" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Content:</label>
        <textarea name="content" class="form-control form-content" required> <%= post.content %> </textarea>
        <div class="text-center">
        <input type="submit" class="btn btn-primary submit-btn" value="Submit">
    </div>
    </div>
    </form>
    </div>
    